    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug nyc-taxi",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeArgs": [
                "--enable-source-maps",
                "--experimental-vm-modules",
            ],
            "program": "${workspaceFolder}/lib/p2np.js",
            // "program": "${workspaceFolder}/node_modules/.bin/tsx",
            // "args": [
            //     "--no-cache",
            //     "--enable-source-maps",
            //     "--experimental-vm-modules",
            //     "${input:FILE}"
            // ],
        }
    ],
    "inputs": [
        {
            "id": "FILE",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "cwd": "${workspaceFolder}/modules/nyc-taxi",
                "description": "Select a file to debug",
                "command": "ls | grep '.ts' | sed -r \"s@$PWD/@@g\"",
            }
        },
    ],
}
